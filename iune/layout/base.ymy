<!doctype html>

html.no-js [lang="{{ resource.meta.language }}"]
    head
        {% block starthead %}
        {% endblock starthead %}


        meta
            - charset utf-8
        meta
            - http-equiv X-UA-Compatible
            - content {{ resource.meta.compatibility }}
        meta
            - name viewport
            - content width=device-width
            - initial-scale 1.0

        title
            | {% block title %}iune | {{ resource.meta.title }}{% endblock %}

        meta
            - name description
            - content {{ resource.meta.description }}
        meta
            - name author
            - content {{ resource.meta.author }}
        meta
            - name viewport
            - content {{ resource.meta.viewport }}

        {% block favicons %}
        link
            - rel "shortcut icon"
            - href {{ media_url('/favicon.ico') }}
        {% endblock favicons %}

        {% block css %}
        link
            - rel stylesheet
            - type text/css
            - href {{ media_url('stylesheets/main.css') }}
        link
            - rel stylesheet
            - media screen
            - href http://openfontlibrary.org/face/lato-regular
            - rel stylesheet
            - type text/css
        {% endblock css %}

        {% block js %}
        script[src="{{ media_url('components/modernizr/modernizr.js') }}"]
        {% endblock js %}


    body[class="{{ resource.meta.extends.split('.')[0] }}"]
        header
            {% block header %}
            h1
                a
                    -href /
                    img
                        - src {{ media_url('images/iune.svg') }}
                        - alt iune
            hgroup.hi
                h2
                    | I'm&nbsp
                    span#name
                        | iune,
                h3 a libre graphic designer
            a.scroll
                - href
                img
                    - src {{ media_url('images/down.svg') }}
                    - alt scroll

            {% endblock header %}

            {% block info %}
            ul.info.no-bullet.inline-list
                {% for icon in info %}
                li.icon
                    a
                        - href {{ icon.href }}
                        img.red
                            - src {{ media_url(icon.image|string) }}
                            - alt {{ icon.name }}
                {% endfor %}
                li.icon.language
                    a.custom-split-button-class
                        - href #
                        | i18n
                    ul
                        {% for language, translations in resource.translations|groupby('meta.language') %}
                        {% set translation = translations|first %}
                        li
                            a {{ language }}
                                - href {{ translation.full_url }}
                        {% endfor %}
            {% endblock %}

        section.content
            {% block content %}
            {% for grp, res_walker in site.content.walk_section_groups() %}
            {% if grp.name != 'section' %}
            div#portfolio
                ul
                    {% for res in translated(res_walker) %}
                    li.thumbnail
                        a.grayscale
                            - href {{ res.full_url }}

                            {% if res.meta.thumbnail %}
                            {% set thumbnail=res.meta.thumbnail %}
                            {% elif res.meta.image %}
                            {% set thumbnail=res.meta.image %}
                            {% endif %}

                            {% if thumbnail %}
                            img
                                - src {{ media_url(thumbnail) }}
                            {% endif %}
                            hgroup
                                h1
                                    | {{ res.meta.title }}
                                h2
                                    | {{ res.meta.title }}
                    {% endfor %}
            {% endif %}
            {% endfor %}

            div#portfolio
                {% block about %}
                {% endblock about %}
            {% endblock content %}

        footer
            {% block footer %}
            {% endblock footer %}
        script[src="{{ media_url('components/foundation/js/vendor/jquery.js') }}"]
        script[src="{{ media_url('components/foundation/js/foundation.min.js') }}"]
        script[src="{{ media_url('components/foundation/js/foundation/foundation.dropdown.js') }}"]
        script[src="{{ media_url('js/jquery.BlackAndWhite.js') }}"]
        script[src="{{ media_url('js/main.js') }}"]
